              } else {
                throw switchError;
              }
            }
          }

          // ãƒ—ãƒ­ãƒã‚¤ãƒ€ãƒ¼ã¨ã‚³ãƒ³ãƒˆãƒ©ã‚¯ãƒˆã®åˆæœŸåŒ–
          const provider = new ethers.providers.Web3Provider(window.ethereum);
          const signer = provider.getSigner();
          const contract = new ethers.Contract(
            CONTRACT_ADDRESS,
            REGISTRATION_ABI,
            signer
          );

          // ç¾åœ¨ã®RPCãƒ—ãƒ­ãƒã‚¤ãƒ€ãƒ¼æƒ…å ±ã‚’è¡¨ç¤º
          const network = await provider.getNetwork();
          console.log("Provider Network:", network);

          showStatus(
            "info",
            '<span class="spinner"></span>NFTã®çŠ¶æ…‹ã‚’ç¢ºèªä¸­...'
          );

          // ã‚³ãƒ³ãƒˆãƒ©ã‚¯ãƒˆã‚¢ãƒ‰ãƒ¬ã‚¹ã®ãƒ‡ãƒãƒƒã‚°æƒ…å ±
          console.log("Contract Address:", CONTRACT_ADDRESS);
          console.log("User Account:", userAccount);

          // mintæ¸ˆã¿ã‹ã©ã†ã‹ã‚’ç¢ºèª
          let hasMinted = false;
          try {
            hasMinted = await contract.hasMinted(userAccount);
            console.log("Has Minted:", hasMinted);
          } catch (checkError) {
            console.error("Error checking mint status:", checkError);
            // hasMintedã§ã‚¨ãƒ©ãƒ¼ãŒå‡ºãŸå ´åˆã€balanceOfã§ä»£æ›¿ç¢ºèª
            try {
              const balance = await contract.balanceOf(userAccount);
              hasMinted = balance > 0;
              console.log(
                "Balance:",
                balance.toString(),
                "Has Minted:",
                hasMinted
              );
            } catch (balanceError) {
              console.error("Error checking balance:", balanceError);
              throw new Error(
                "ã‚¹ãƒãƒ¼ãƒˆã‚³ãƒ³ãƒˆãƒ©ã‚¯ãƒˆã¸ã®æ¥ç¶šã«å¤±æ•—ã—ã¾ã—ãŸã€‚ã‚¢ãƒ‰ãƒ¬ã‚¹ã‚’ç¢ºèªã—ã¦ãã ã•ã„ã€‚"
              );
            }
          }

          let tx;
          if (!hasMinted) {
            // æœªmintã®å ´åˆã¯ã¾ãšmint
            showStatus("info", '<span class="spinner"></span>NFTã‚’mintä¸­...');
            try {
              // ã‚¬ã‚¹ãƒªãƒŸãƒƒãƒˆã‚’æ‰‹å‹•ã§è¨­å®šã—ã¦mintã‚’è©¦è¡Œ
              tx = await contract.mint({ gasLimit: 500000 });
