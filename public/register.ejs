        if (!sessionData) {
          showStatus("error", "ã‚»ãƒƒã‚·ãƒ§ãƒ³æƒ…å ±ãŒèª­ã¿è¾¼ã¾ã‚Œã¦ã„ã¾ã›ã‚“");
          return;
        }

        const button = document.getElementById("connectButton");
        button.disabled = true;

        try {
          showStatus(
            "info",
            '<span class="spinner"></span>MetaMaskã«æ¥ç¶šä¸­...'
          );

          // ã‚¢ã‚«ã‚¦ãƒ³ãƒˆæ¥ç¶šè¦æ±‚
          const accounts = await window.ethereum.request({
